@page "/cart"

<section class="cart-container">
    <h2 class="cart-title">Your Cart</h2>
    <div class="cart-items">

        <div class="cart-item">
            <div class="item-image">
                <img src="https://i.imgur.com/UePbdph.png" alt="Notebook">
            </div>
            <div class="item-info">
                <h4>Notebook</h4>
                <p>High quality notebook</p>
            </div>
            <div class="item-quantity">
                <button><i class="fas fa-minus"></i></button>
                <span>1</span>
                <button><i class="fas fa-plus"></i></button>
            </div>
            <div class="item-price">$5.99</div>
        </div>

        <div class="cart-item">
            <div class="item-image">
                <img src="https://i.imgur.com/z6E3zMN.png" alt="Pen">
            </div>
            <div class="item-info">
                <h4>Pen</h4>
                <p>Blue ink ballpoint pen</p>
            </div>
            <div class="item-quantity">
                <button><i class="fas fa-minus"></i></button>
                <span>2</span>
                <button><i class="fas fa-plus"></i></button>
            </div>
            <div class="item-price">$2.98</div>
        </div>

    </div>

    <div class="cart-summary" style="margin-top: 2rem; text-align: center;">
        <div style="background: #f9f9f9; border-radius: 10px; padding: 1.5rem; box-shadow: 0 4px 8px rgba(0,0,0,0.05); display: inline-block; text-align: left; min-width: 220px;">
            <p style="margin: 0.5rem 0;"><strong>Subtotal:</strong> $8.97</p>
            <p style="margin: 0.5rem 0;"><strong>Shipping:</strong> $2.99</p>
            <hr style="margin: 1rem 0;">
            <p style="font-size: 1.1rem; color: #4CAF50; font-weight: bold;"><strong>Total:</strong> $11.96</p>
        </div>
    </div>


    <div class="submit-order">
        <button>Submit Order</button>
    </div>
</section>