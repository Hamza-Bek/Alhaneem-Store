@page "/Login"
@layout AuthLayout

<div class="login-wrapper">
    <div class="login-box">
        <!-- Form Section -->
        <div class="login-form-section">
            <a href="/" class="back-link">
                <i class="fa-solid fa-arrow-right"></i> الصفحة الرئيسية
            </a>

            <h2 class="login-title">اهلا و سهلا</h2>
            <form>
                <label for="email">البريد الالكتروني</label>
                <input type="email" id="email" placeholder="example@mail.com" required>

                <label for="password">كلمة السر</label>
                <input type="password" id="password" placeholder="••••••" required>

                <div class="login-actions">
                    <span class="new-account">حساب جديد؟</span>
                    <button type="submit" class="login-btn">تسجيل دخول</button>
                </div>
            </form>
        </div>

        <!-- Image Section -->
        <div class="login-image-section">
            <img src="imgs/IMG_1922.JPG" alt="Login Image">
        </div>
    </div>
</div>
