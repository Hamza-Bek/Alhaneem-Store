@page "/Product/View"

<div class="product-view-container">
    <!-- LEFT: Gallery -->
    <div class="product-gallery">
        <div class="main-image">
            <img id="mainProductImage" src="imgs/IMG_2098.JPG" alt="Main Product Image">
        </div>
        <div class="thumbnail-row">
            <img src="imgs/IMG_2098.JPG" alt="Thumb 1" class="thumbnail" onclick="changeImage(this)">
            <img src="imgs/IMG_1922.JPG" alt="Thumb 2" class="thumbnail" onclick="changeImage(this)">
            <img src="imgs/IMG_2283.JPG" alt="Thumb 3" class="thumbnail" onclick="changeImage(this)">
            <img src="imgs/IMG_2098.JPG" alt="Thumb 4" class="thumbnail" onclick="changeImage(this)">
        </div>
    </div>

    <!-- RIGHT: Info -->
    <div class="product-info">
        <h1 class="product-title">مفروشات الهانم السورية</h1>
        <p class="product-description">
            هذا المنتج مصنوع من أجود الخامات، تصميم فاخر يلائم جميع الأذواق ويوفر راحة مثالية. متوفر بعدة ألوان ومقاسات حسب رغبتك.
        </p>
        <p class="product-price">300 EGP</p>
        <button class="add-to-cart-btn">اضف الى العربة</button>
    </div>
</div>


<script>
    function changeImage(thumb) {
        const mainImage = document.getElementById("mainProductImage");
        mainImage.src = thumb.src;

        // Remove active from all thumbnails
        document.querySelectorAll(".thumbnail").forEach(img => {
            img.classList.remove("active-thumb");
        });

        // Add active to the clicked one
        thumb.classList.add("active-thumb");
    }

    // Optional: set initial active thumbnail on page load
    window.addEventListener("DOMContentLoaded", () => {
        const initialThumb = document.querySelector(".thumbnail");
        if (initialThumb) {
            initialThumb.classList.add("active-thumb");
        }
    });
</script>



